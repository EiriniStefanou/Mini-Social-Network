<div
  class="fixed bg-white shadow py-3 w-full flex items-center justify-between"
>
  <div class="ml-2 flex items-center">
    <h1>Logo</h1>

    <% if (user && auth) { %>
    <div class="mx-4">
      <input placeholder="Search...." class="bg-gray-200 rounded p-2 w-80" />
    </div>

    <div class="mx-4">
      <a href="/" class="mx-4 cursor-pointer hover:opacity-50 duration-300"
        >Home</a
      >
    </div>
    <% } %>
  </div>

  <div class="flex items-center">
    <% if (user && auth) { %>
    <div>
      <a
        href="/createPost"
        class="
          bg-blue-400
          px-4
          py-2
          hover:bg-blue-500
          rounded
          text-white
          duration-300
        "
      >
        Create post
      </a>
    </div>
    <div>
      <div class="relative">
        <a
          class="
            mx-4
            dropdown-event
            select-none
            cursor-pointer
            hover:opacity-50
            duration-300
          "
          ><%= user.name %>
        </a>

        <div
          class="
            w-40
            bg-white
            hidden
            dropdown
            absolute
            top-10
            border
            right-2
            shadow
          "
        >
          <a
            href="/user/<%= user.name %>"
            class="p-2 block hover:bg-blue-500 hover:text-white duration-300"
            >Profile</a
          >
          <a
            href=""
            class="
              p-2
              block
              border-t
              hover:bg-blue-500
              hover:text-white
              duration-300
            "
            >Sign Out</a
          >
        </div>
      </div>
    </div>
    <% } else { %>
    <a href="/auth/login" class="mx-2">Login</a>
    <a href="/auth/register" class="mx-2">Register</a>
    <% } %>
  </div>
</div>
