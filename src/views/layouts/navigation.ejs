<div
  class="fixed bg-white shadow py-3 w-full flex items-center justify-between"
>
  <div class="ml-2 flex items-center">
    <a href="/">
      <img src="/logo.png" width="90" height="auto" />
    </a>

    <% if (user && auth) { %>
    <div class="hidden md:block mx-4">
      <form action="/search/posts" method="POST">
        <input name="search" placeholder="Search Posts...." class="bg-gray-200 rounded-r p-2 w-80 outline-none border-none" />

        <button type="submit" class="bg-gray-200 px-4 py-2 rounded-r -mx-2 hover:opacity-50 outline-none border-none duration-300 focus:outline-none">Search</button>
      </form>
    </div>

    <div class="mx-4">
      <a href="/" class="mx-4 cursor-pointer hover:opacity-50 duration-300"
        >Home</a
      >
    </div>
    <% } %>
  </div>

  <div class="flex items-center">
    <% if (user && auth) { %>
    <div>
      <a
        href="/createPost/view"
        class=" bg-blue-400 px-4 py-2 hover:bg-blue-500 rounded text-white duration-300
        "
      >
        Create post
      </a>
    </div>
    <div>
      <div class="relative">
        <a
          class=" mx-4 dropdown-event select-none cursor-pointer hover:opacity-50 duration-300
          "
          ><%= user.name %>
        </a>

        <div
          class=" w-40 bg-white hidden dropdown absolute top-10 border right-2 shadow
          "
        >
          <% if (user.role === 'admin' && auth) { %>
          <a
            href="/overview/dashboard"
            class=" p-2 block border-b hover:bg-blue-500 hover:text-white duration-300
            "
            >Admin Dashboard</a
          >
          <% } %>
          <a
            href="/user/<%= user.name %>"
            class="p-2 block hover:bg-blue-500 hover:text-white duration-300"
            >Profile</a
          >
          <a
            href="/myProfile/myPosts"
            class=" p-2 block border-t hover:bg-blue-500 hover:text-white duration-300
            "
            >My Posts</a
          >
          <form
            class=" p-2 block border-t hover:bg-blue-500 hover:text-white cursor-pointer duration-300
            "
            action="/auth/logout"
            method="POST"
          >
            <button type="submit" class="w-full text-left border-none outline-none">Sign Out</button>
          </form>
        </div>
      </div>
    </div>
    <% } else { %>
    <a href="/auth/login" class="mx-2">Login</a>
    <a href="/auth/register" class="mx-2">Register</a>
    <% } %>
  </div>
</div>
