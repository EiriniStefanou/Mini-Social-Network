<div class="flex justify-center flex-col items-center">
  <h1 class="my-4">Create Post</h1>
  <form
    method="POST"
    action="/updatePost/<%= post.id %>"
    class="w-full sm:max-w-md bg-white rounded shadow p-2"
  >
    <div>
      <label class="my-2 block">Title</label>
      <input
        required
        type="text"
        name="title"
        placeholder="Title"
        value="<%= post.title %>"
        class="bg-gray-200 p-2 rounded w-full"
      />
    </div>

    <div>
      <label class="my-2 block">Description</label>
      <textarea
        required
        type="text" name="description"
        placeholder="Description" rows="10" cols="10"
        class="bg-gray-200 p-2 rounded w-full"><%= post.description %></textarea>
    </div>

    <div class="flex items-center justify-end mb-2 mt-6">
      <button
        type="submit"
        class="
          px-4
          py-2
          rounded
          bg-gray-800
          hover:opacity-50
          duration-300
          text-white
        "
      >
        Save Changes
      </button>
    </div>
  </form>
</div>
