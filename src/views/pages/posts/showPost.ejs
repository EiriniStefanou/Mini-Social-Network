<div class="md:container md:mx-auto flex items-center justify-between mx-4">
  <div class="bg-white w-2/3 rounded shadow px-4 py-2 mx-1">
    <h1 class="font-bold text-xl text-center py-4">
      <%= post.title %>
    </h1>

    <p class="mt-4 mb-8">
      <span class="capitalize font-bold hover:opacity-50 cursor-pointer duration-300 text-blue-600">
        <%= post.User.name %>
      </span
      >
    </p>

    <p class="px-4 text-gray-700 font-bold">
      <%= post.description %>
    </p>

  </div>

  <div class="bg-white w-1/3 self-start mx-1 rounded shadow px-4 py-2"">
    
      
      <%- include('../partial/Reactions', {post: post, page: 'singlePost'}) %>

      <%- include('../partial/UserReactionList', {post: post}) %>
        
    
  </div>
      
</div>
