<div class="grid grid-cols-3 gap-4 md:mx-10">
  <% if (posts && posts.length > 0) {%> <% for(var i = 0; i < posts.length; i++)
  { %>

  <div class="bg-white rounded px-4">
    <h1 class="my-2 text-lg font-bold"><%= posts[i].title %></h1>

    <p class="my-2 p-2 text-gray-700"><%= posts[i].description %></p>
  </div>

  <% } %> <% } %>
</div>
